#include<iostream>
using namespace std;
#include<bits/stdc++.h>
int main()
{
    int n;
    cout<<"please enter the value of n"<<endl;
    cin>>n;
    for(int i=n; i>0; i--)
    {
        for(int j=n; j>0; j--)
        {
            if(i+j<n)
            {
                cout<<"*";
            }
            else
            {
                cout<<" ";
            }
        }cout<<endl;
    }
}
