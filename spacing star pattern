#include<iostream>
using namespace std;
#include<bits/stdc++.h>
int main()
{
    int n;
    cout<<"please enter the value of n"<<endl;
    cin>>n;
    for(int i=0; i<n; i++)
    {
        for(int j=0; j<n; j++)
        {
            if(i+j>=n-1)
            {
                cout<<"*";
            }
            else
            {
            cout<<" ";    
            }
             
        }
       cout<<endl;
    }
}
