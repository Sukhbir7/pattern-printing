#include<iostream>
using namespace std;
#include<bits/stdc++.h>
int main()
{
   int n;
   cout<<"please enter the value of n"<<endl;
   cin>>n;
   for(int i=1; i<=n; i++)
   {
      for(int j=1; j<=n; j++)
      {
         if(i+j>=n+1)
         {
            cout<<"*";
         }
         else
         {
         cout<<" ";
         }
      }
      cout<<endl;
   }
}
